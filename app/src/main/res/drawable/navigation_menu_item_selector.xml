<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/graphite_grey"
        android:state_activated="false" android:state_pressed="true" />

    <item android:state_activated="true" android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <solid android:color="@color/navy_blue" />
                </shape>
            </item>
            <item android:left="10dp">
                <shape>
                    <solid android:color="@color/light_grey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_activated="true" android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape>
                    <solid android:color="@color/navy_blue" />
                </shape>
            </item>
            <item android:left="10dp">
                <shape>
                    <solid android:color="@color/graphite_grey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@color/light_grey" />

</selector>