<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
            android:id="@+id/dashboard_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.95"
            android:padding="3dp"
            android:textSize="16sp"
            app:font="@string/medium_font_name" />

        <ImageButton
            android:id="@+id/delete_dashboard_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            android:background="@drawable/transparent_selector"
            android:contentDescription="@string/graphical_resource"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

</android.support.v7.widget.CardView>