<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="2dp">

    <org.dhis2.mobile.ui.views.CardTextViewButton
        android:id="@+id/unit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/choose_organization_unit"/>

    <org.dhis2.mobile.ui.views.CardTextViewButton
        android:id="@+id/dataset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/choose_dataset"/>

    <org.dhis2.mobile.ui.views.CardTextViewButton
        android:id="@+id/period_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/choose_period"/>

</LinearLayout>