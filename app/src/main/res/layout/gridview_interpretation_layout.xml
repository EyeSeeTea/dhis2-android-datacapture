<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="top">

            <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
                android:id="@+id/interpretation_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:singleLine="true"
                android:textSize="16sp"
                app:font="@string/light_font_name" />

            <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
                android:id="@+id/interpretation_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interpretation_user"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:textColor="@color/darker_grey"
                android:textSize="12sp"
                app:font="@string/light_font_name" />

            <ImageButton
                android:id="@+id/interpretation_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/transparent_selector"
                android:contentDescription="@string/graphical_resource"
                android:src="@drawable/ic_overflow_menu" />

        </RelativeLayout>

        <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
            android:id="@+id/interpretation_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="13sp"
            app:font="@string/light_font_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <!-- This layout is used only in order to catch click events -->
        <LinearLayout
            android:id="@+id/interpretation_body_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/transparent_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/interpretation_dashboard_element"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/graphical_resource"
                android:padding="15dp"
                android:scaleType="centerCrop" />

            <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
                android:id="@+id/interpretation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/navy_blue"
                android:textSize="17sp"
                app:font="@string/light_font_name" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/interpretation_comments_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/transparent_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="9dp">

            <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/comments"
                android:textColor="@color/darker_grey"
                android:textSize="17sp"
                app:font="@string/light_font_name" />

            <org.hisp.dhis.mobile.datacapture.ui.views.FontTextView
                android:id="@+id/interpretation_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_shape_background"
                android:gravity="center"
                android:minHeight="24dp"
                android:minWidth="24dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:font="@string/light_font_name" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>